{
  "name": "gydo",
  "version": "1.0.0",
  "description": "Graph Your Data Online",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cp src/client/static/* dist/static/ && browserify -p tsify -t [ envify --NODE_ENV production ] -t vueify -e src/client/index.js -o dist/static/client.js",
    "build:server": "cross-env NODE_ENV=production tsc --outDir dist --project tsconfig.json",
    "check": "tslint -c tslint.json -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "concurrently \"npm run watch:client\" \"npm run watch:server\"",
    "watch:client": "cp src/client/static/* src/server/static/ && watchify -p tsify -t [ envify --NODE_ENV development ] -t vueify -e src/client/index.js -o src/server/static/client.js -v",
    "watch:server": "ts-node-dev --respawn --transpile-only src/server/index.ts"
  },
  "author": "Remi Caput",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "jsonata": "^1.8.4",
    "node-fetch": "^2.6.1",
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.6",
    "vue-property-decorator": "^9.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node-fetch": "^2.5.7",
    "browserify": "^17.0.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "envify": "^4.1.0",
    "node-sass": "^5.0.0",
    "ts-node-dev": "^1.0.0",
    "tsify": "^5.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5",
    "vueify": "^9.4.1",
    "watchify": "^3.11.1"
  }
}
